{
    "name": "sailing-through-pcds-devcontainer",
    "build": {
        "context": "..",
        "dockerfile": "../docker/Dockerfile"
    },
    "containerEnv": {
        "DISPLAY": "unix:0",
        "ROS_LOCALHOST_ONLY": "0",
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "SUBNET",
        "ROS_DOMAIN_ID": "0",
        "SHELL": "/bin/zsh"
    },
    "runArgs": [
        "--privileged",
        "--gpus",
        "all",
        "-v",
        "/dev:/dev",
        "--net=host",
        "-e",
        "DISPLAY=${env:DISPLAY}",
        "--ulimit=core=-1"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached",
        "source=${localEnv:HOME}/sailing-through-pcds-devcontainer/.zsh_history,target=/home/dev/.zsh_history,type=bind,consistency=cached",
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/sailing-through-pcds-devcontainer/src/sailing-through-pcds-devcontainer,type=bind",
    "workspaceFolder": "/workspace/sailing-through-pcds-devcontainer/src",
    "customizations": {
        "vscode": {
            "settings": {
                "extensions.verifySignature": false
            },
            "extensions": [
                "cheshirekow.cmake-format",
                "llvm-vs-code-extensions.vscode-clangd",
                "ms-azuretools.vscode-docker",
                "ms-iot.vscode-ros",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.pylint",
                "ms-python.python",
                "ms-toolsai.jupyter",
                "ms-vscode.cmake-tools",
                "mutantdino.resourcemonitor",
                "vadimcn.vscode-lldb",
                "xaver.clang-format"
            ]
        }
    },
    "forwardPorts": [
        3000
    ],
    "portsAttributes": {
        "3000": {
            "label": "Application",
            "onAutoForward": "notify"
        }
    }
}